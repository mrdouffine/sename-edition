# ============================================================================
# Configuration de l'application
# ============================================================================

# URL de base de l'application
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_BASE_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/livreo

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=votre_secret_ici

# ============================================================================
# Fedapay Configuration (Paiement par carte)
# ============================================================================

# Environnement: 'sandbox' pour les tests, 'production' pour la prod
FEDAPAY_ENVIRONMENT=sandbox

# Clés API Fedapay
FEDAPAY_API_KEY=votre_fedapay_api_key
FEDAPAY_PRIVATE_KEY=votre_fedapay_private_key
FEDAPAY_PUBLIC_KEY=votre_fedapay_public_key
FEDAPAY_ACCOUNT_ID=votre_compte_id
FEDAPAY_WEBHOOK_SECRET=votre_webhook_secret

# ============================================================================
# Cloudinary Configuration (Hébergement d'images)
# ============================================================================

# Identifiants Cloudinary - Obtenez-les sur https://cloudinary.com
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret

# ============================================================================
# PayPal Configuration (Optionnel)
# ============================================================================

PAYPAL_CLIENT_ID=votre_paypal_client_id
PAYPAL_CLIENT_SECRET=votre_paypal_client_secret
PAYPAL_API_BASE_URL=https://api-m.sandbox.paypal.com
